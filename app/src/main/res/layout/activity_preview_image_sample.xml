<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.hairstyle.camera_sample">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:src="@drawable/sample2"
            android:scaleType="centerCrop" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/savePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:src="@drawable/ic_check_white_18dp"
            fab:fab_colorNormal="#e91e62"
            fab:fab_colorPressed="#ba0c50"
            fab:fab_colorRipple="#ba0c50"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center|right" />

        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/CancelPic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            fab:fab_colorNormal="#e91e62"
            fab:fab_colorPressed="#ba0c50"
            fab:fab_colorRipple="#ba0c50"
            android:orientation="horizontal"
            android:layout_gravity="left|bottom|center" />

    </FrameLayout>
</RelativeLayout>
