<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.hairstyle.camera_sample">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:src="@drawable/sample2"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right">

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/picCatergories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:src="@drawable/ic_menu_white_36dp"
                fab:fab_colorNormal="#e91e62"
                fab:fab_colorPressed="#ba0c50"
                fab:fab_colorRipple="#ba0c50"
                android:orientation="horizontal"
                android:layout_gravity="center" />

            <com.melnykov.fab.FloatingActionButton
                android:id="@+id/takePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:src="@drawable/ic_photo_camera_white_18dp"
                fab:fab_colorNormal="#e91e62"
                fab:fab_colorPressed="#ba0c50"
                fab:fab_colorRipple="#ba0c50"
                android:orientation="horizontal"
                android:layout_gravity="center" />
        </LinearLayout>

    </FrameLayout>
</RelativeLayout>
